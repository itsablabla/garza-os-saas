{
  "buildCommand": "npm run build",
  "outputDirectory": "apps/api/.next",

  "functions": {
    "api/**": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
